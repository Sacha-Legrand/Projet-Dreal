colnames(dbsonde827MMReg)=c("date","TeauMinMM365","TeauMaxMM365")
dbsonde827MMReg$date <- as.Date(dbsonde827MMReg$date,origin="1970-01-01")
dbsonde827MMReg <- dbsonde827MMReg[is.na(dbsonde827MMReg$TeauMinMM365)==F,]
