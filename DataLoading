db_xts_date830 = dbsonde830MM$date
db_xts_sonde830 = xts(db_xts_sonde830, order.by=db_xts_date830)
db_xts_sonde830a =  db_xts_sonde830[,c(1,4,2,5,11,8)]
db_xts_sonde830b = db_xts_sonde830[,c(6,12,9,17,18)]
