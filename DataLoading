                                    "812", "813", "815", "816",
                                    "817", "818", "819",
                                    "820", "821", "823", "824",
                                    "825", "828", "830")]


i_deb = which.max(!rowSums(is.na(db_classif_moy3)))
i_fin = nrow(db_classif_moy3)-(which.max(!rowSums(is.na(db_classif_moy3[nrow(db_classif_moy3):1,])))-1)
db_classif_moy3 = db_classif_moy3[i_deb:i_fin,]
