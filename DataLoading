i_fin = nrow(db_classif_bih2)-(which.max(!rowSums(is.na(db_classif_bih2[nrow(db_classif_bih2):1,])))-1)
db_classif_bih2 = db_classif_bih2[i_deb:i_fin,]
db_classif_bih2 = na.locf(na.locf(db_classif_bih2),fromLast=TRUE)

dim(db_classif_bih2)



# base 3
