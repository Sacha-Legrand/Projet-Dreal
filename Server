            dyAxis("y", label = "Température (en °C)", valueRange = c(5, 15)) %>%
            dyRangeSelector() %>%       dyLegend(show = "follow")
    })
    
    observeEvent(input$Teau_min_822MM365, {
        varSelec822MM365$`Température minimale MM365` = input$Teau_min_822MM365
    })
    
