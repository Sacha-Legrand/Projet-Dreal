        varSelec822MM365$`Température moyenne MM365` = input$Teau_moy_822MM365
    })
    
    observeEvent(input$Teau_max_822MM365, {
        varSelec822MM365$`Température maximale MM365` = input$Teau_max_822MM365
    })
    
